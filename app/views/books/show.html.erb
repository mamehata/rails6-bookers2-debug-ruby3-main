<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
            <td>
              <% if @book.user.id == current_user.id %>
                <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
              <% elsif @book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                    ♥<%= @book.favorites.count %>いいね
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    ♡<%= @book.favorites.count %>いいね
                  <% end %>
                </p>
              <% end %>
            </td>
            <td>
              <% if @book.user.id == current_user.id %>
                <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
              <% else %>
                <p>コメント数: <%= @book.book_comments.count %></p>
              <% end %>
            </td>
        </tr>
      </table>
      <% @book.book_comments.each do |book_comment| %>
        <%= link_to user_path(book_comment) do %>
          <%= image_tag book_comment.user.get_profile_image, size: "100x100" %>
          <%= book_comment.user.name %>
        <% end %>
        <%= book_comment.comment %>
      <% end %>
      <%= form_with model: [@book, @comment] do |f| %>
        <%= f.text_area :comment, rows: '5', class: 'form-control' %><br>
        <%= f.submit '送信' %>
      <% end %>
    </div>
  </div>
</div>