<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to(@book.user) do %>
              <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td class="favorites_btns_<%= @book.id %>">
            <% unless @book.user == current_user %>
              <%= render 'favorites/btn', book: @book %>
            <% end %>
          </td>
          <td>コメント数: <%= @book.book_comments.count %></td>
          <td>
            <% if @book.user.id == current_user.id %>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @book.user.id == current_user.id %>
              <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %>
          </td>
        </tr>
      </table>

      <div class="comments_index_<%= @book.id %>">
        <%= render 'book_comments/index', book: @book %>
      </div>
      <div class="new_comments_<%= @book.id %>">
        <%= render 'book_comments/form', book: @book, comment: @comment %>
      </div>

    </div>
  </div>
</div>