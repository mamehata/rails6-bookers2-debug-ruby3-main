<div class="container">
  <div class="row">
    <div class ="col-5 mx-auto">
      <h1>Editing Group</h1>
      <%= form_with model:@group do |f| %>
        <%= render 'layouts/errors', obj:@group %>
        <div class="form-group">
          <label class="form-label">グループ名</label>
          <%= f.text_field :name, class:"form-control" %>
        </div>

        <div class="form-group">
          <label class="form-label">紹介文</label>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>

        <div class="form-group">
          <label class="form-label">グループ画像</label><br>
          <%= f.file_field :image, accept: 'image/*' %>
        </div>

        <div>
          <%= f.submit 'Update Group', class:"btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>